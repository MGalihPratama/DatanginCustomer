<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarCustomer">

    <LinearLayout
        android:id="@+id/daftar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back_daftar"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/back_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins"
            android:lineHeight="24dp"
            android:text="Daftar"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/line"
        android:layout_below="@+id/daftar_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/line">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="3dp"
            android:textStyle="normal"
            android:text="Halo, silahkan isi data kamu dengan lengkap ya."
            android:textColor="#000000"
            android:textSize="12sp" />
        <EditText
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_style"
            android:fontFamily="@font/poppins"
            android:hint="Nama Lengkap"
            android:inputType="text"/>

        <EditText
            android:hint="No. Handphone"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/form_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <EditText
            android:hint="PIN 6 Digit"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/form_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

        <EditText
            android:hint="Email (optional)"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/form_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>

        <Button
            android:id="@+id/btn_daftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/btn_style"
            app:backgroundTint="@null"
            android:hint="Daftar"
            android:textSize="16sp"
            android:textColorHint="@color/white" />
    </LinearLayout>

</RelativeLayout>