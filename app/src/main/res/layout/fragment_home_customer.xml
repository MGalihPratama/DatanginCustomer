<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_customer"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/header_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="94dp"
            android:layout_height="36dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/datangin_putih"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/btn_notifikasi"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="16sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/lonceng"/>
        <TextView
            android:id="@+id/halo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Halo Rifki,"
            android:inputType="text"
            android:textSize="21sp"
            android:textColorHint="#FFFFFF"
            android:layout_marginTop="90dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/halo"
            android:layout_marginStart="16dp"
            android:text="Ayo kumpulkan point bareng datangin!"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card_level"
        android:background="@drawable/level_datangin"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="176dp">

        <ImageView
            android:id="@+id/medali"
            android:layout_width="51dp"
            android:layout_height="61dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/medali"/>

        <TextView
            android:id="@+id/level_datangin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/poppins"
            android:textColor="#000000"
            android:text="Level Datangin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginRight="62dp"
            android:fontFamily="@font/poppins"
            android:textColor="#000000"
            android:text="Datangin Point"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:src="@drawable/vertikal_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="NEWBIE"
            android:layout_marginLeft="71dp"
            android:textColorHint="#ED9D5D"
            android:fontFamily="@font/poppins"
            android:textSize="16dp"
            android:layout_below="@+id/level_datangin"/>
        <ImageView
            android:id="@+id/logo_pts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_datangin"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/logo_pts"/>
        <TextView
            android:id="@+id/point_datangin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="100.000"
            android:fontFamily="@font/poppins"
            android:inputType="number"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@+id/logo_pts"
            android:layout_marginLeft="18dp"
            android:textColorHint="#000000"
            android:layout_below="@+id/level_datangin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pts"
            android:layout_alignLeft="@+id/point_datangin"
            android:layout_below="@+id/level_datangin"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="59dp"
            android:textSize="10sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/picdeme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_level"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pickup"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pickup"
                android:fontFamily="@font/poppins"
                android:textSize="12dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/delivery"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Delivery"
                android:fontFamily="@font/poppins"
                android:textSize="12dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_membership"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/membership"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Membership"
                android:fontFamily="@font/poppins"
                android:textSize="12dp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/picdeme"
        android:background="@color/grey"/>
</RelativeLayout>